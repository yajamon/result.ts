{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,

    "rootDir": "src",
    "outDir": "lib",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    "inlineSourceMap": true,
    "inlineSources": true,

    "skipLibCheck": true,
    "types": [
      "jest"
    ],

    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}
