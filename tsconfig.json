{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    "inlineSourceMap": true,
    "inlineSources": true,

    "forceConsistentCasingInFileNames": true
  }
}
